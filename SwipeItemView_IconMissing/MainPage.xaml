<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SwipeItemView_IconMissing.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SwipeItemView_IconMissing">
    <ContentPage.BindingContext>
        <local:MainPageViewModel />
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout
            BindableLayout.ItemsSource="{Binding SwipeViewViewModel}"
            Spacing="1">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <SwipeView RightItems="{Binding SwipeRightItems}">
                            <Label
                                Padding="24"
                                Text="{Binding SwipeViewText}" />
                        </SwipeView>
                    </Grid>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>